{
  "name": "mnemonic-shards",
  "version": "1.0.0",
  "description": "Professional mnemonic seed phrase splitting tool using Shamir Secret Sharing with file upload recovery, tab-based interface, and OpenPGP encryption support",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "bun --bun run vite preview --port 8080 --open",
    "dev": "bun run vite",
    "serve": "bun --bun run vite preview --port 8080",
    "build": "bun run vite build",
    "preview": "bun run vite preview",
    "start:npm": "npx http-server -p 8080 -o",
    "dev:npm": "npm run dev",
    "serve:npm": "npx http-server -p 8080",
    "build:npm": "npm run build",
    "preview:npm": "npm run preview",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "mnemonic",
    "seed-phrase",
    "shamir",
    "secret-sharing",
    "cryptography",
    "backup",
    "wallet",
    "file-upload",
    "recovery",
    "tab-interface",
    "encryption",
    "openpgp",
    "offline",
    "client-side"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "openpgp": "^6.2.2",
    "shamir-secret-sharing": "^0.0.4"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "vite": "^7.1.7",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
